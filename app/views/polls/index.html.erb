<div class="max-w-3xl mx-auto px-4 sm:px-6 md:px-8 py-8">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-semibold text-slate-800">アンケート一覧</h1>
    <%= link_to "新規作成", new_poll_path, class: "inline-flex items-center rounded-lg bg-indigo-600 px-4 py-2 text-white hover:bg-indigo-700" %>
  </div>

  <div class="space-y-4">
    <% @polls.each do |poll| %>
      <div class="rounded-2xl border bg-white shadow-sm p-5">
        <div class="flex items-center justify-between">
          <div>
            <h2 class="text-lg font-medium text-slate-900">
              <%= link_to poll.title, poll_path(poll), class: "hover:underline" %>
            </h2>
            <p class="text-sm text-slate-500 mt-1">状態: <span class="font-medium"><%= poll.status %></span></p>
          </div>
          <div class="flex items-center gap-2">
            <% if poll.draft? || poll.closed? %>
              <%= button_to "公開する", open_poll_path(poll), method: :post, class: "rounded-lg border px-3 py-2 text-slate-700 hover:bg-slate-50" %>
            <% end %>
            <% if poll.open? %>
              <%= button_to "終了する", close_poll_path(poll), method: :post, class: "rounded-lg border px-3 py-2 text-slate-700 hover:bg-slate-50" %>
            <% end %>
            <%= link_to "編集", edit_poll_path(poll), class: "rounded-lg px-3 py-2 text-indigo-700 border border-indigo-200 hover:bg-indigo-50" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

