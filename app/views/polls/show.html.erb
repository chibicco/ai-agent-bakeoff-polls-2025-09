<div class="max-w-3xl mx-auto px-4 sm:px-6 md:px-8 py-8">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-semibold text-slate-800"><%= @poll.title %></h1>
    <div class="flex items-center gap-2">
      <% if @poll.draft? || @poll.closed? %>
        <%= button_to "公開する", open_poll_path(@poll), method: :post, class: "rounded-lg border px-3 py-2 text-slate-700 hover:bg-slate-50" %>
      <% end %>
      <% if @poll.open? %>
        <%= button_to "終了する", close_poll_path(@poll), method: :post, class: "rounded-lg border px-3 py-2 text-slate-700 hover:bg-slate-50" %>
      <% end %>
      <%= link_to "編集", edit_poll_path(@poll), class: "rounded-lg px-3 py-2 text-indigo-700 border border-indigo-200 hover:bg-indigo-50" %>
    </div>
  </div>

  <div class="rounded-2xl border bg-white shadow-sm p-6">
    <p class="text-slate-600 whitespace-pre-wrap"><%= @poll.description %></p>
    <dl class="mt-6 grid grid-cols-1 sm:grid-cols-2 gap-4 text-sm">
      <div>
        <dt class="text-slate-500">状態</dt>
        <dd class="text-slate-800 font-medium"><%= @poll.status %></dd>
      </div>
      <div>
        <dt class="text-slate-500">締切</dt>
        <dd class="text-slate-800 font-medium"><%= @poll.ends_at&.in_time_zone("Asia/Tokyo")&.strftime("%Y-%m-%d %H:%M") || "設定なし" %></dd>
      </div>
    </dl>
    <div class="mt-8">
      <% voted = cookies.signed["voted_#{@poll.slug}"] == "1" %>
      <% if @poll.votable? && !voted %>
        <%= form_with url: poll_votes_path(@poll), method: :post, class: "space-y-4" do %>
          <fieldset>
            <legend class="text-sm font-medium text-slate-700">1つ選んでください</legend>
            <div class="mt-3 space-y-2">
              <% @choices.each do |choice| %>
                <label class="flex items-center gap-3 text-slate-800">
                  <input type="radio" name="choice_id" value="<%= choice.id %>" class="h-4 w-4 text-indigo-600 border-slate-300 focus:ring-indigo-500">
                  <span><%= choice.label %></span>
                </label>
              <% end %>
            </div>
          </fieldset>
          <%= submit_tag "投票する", class: "inline-flex items-center rounded-lg bg-indigo-600 px-4 py-2 text-white hover:bg-indigo-700" %>
        <% end %>
      <% else %>
        <% total = @choices.sum(&:votes_count) %>
        <div class="flex items-center justify-between mb-2">
          <p class="text-slate-700 font-medium">結果</p>
          <p class="text-slate-500 text-sm">合計: <%= total %> 票</p>
        </div>
        <div class="space-y-3">
          <% @choices.each do |choice| %>
            <% count = choice.votes_count %>
            <% percent = total > 0 ? ((count.to_f / total) * 100.0).round : 0 %>
            <div>
              <div class="flex items-center justify-between text-sm">
                <span class="text-slate-800"><%= choice.label %></span>
                <span class="text-slate-600"><%= percent %>%（<%= count %>）</span>
              </div>
              <div class="mt-1 h-3 w-full rounded-full bg-indigo-100">
                <div class="h-3 rounded-full bg-indigo-600" style="width: <%= percent %>%"></div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
