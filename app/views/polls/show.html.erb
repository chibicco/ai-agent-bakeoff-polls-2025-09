<div class="max-w-3xl mx-auto px-4 sm:px-6 md:px-8 py-8">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-semibold text-slate-800"><%= @poll.title %></h1>
    <div class="flex items-center gap-2">
      <% if @poll.draft? || @poll.closed? %>
        <%= button_to "公開する", open_poll_path(@poll), method: :post, class: "rounded-lg border px-3 py-2 text-slate-700 hover:bg-slate-50" %>
      <% end %>
      <% if @poll.open? %>
        <%= button_to "終了する", close_poll_path(@poll), method: :post, class: "rounded-lg border px-3 py-2 text-slate-700 hover:bg-slate-50" %>
      <% end %>
      <%= link_to "編集", edit_poll_path(@poll), class: "rounded-lg px-3 py-2 text-indigo-700 border border-indigo-200 hover:bg-indigo-50" %>
    </div>
  </div>

  <div class="rounded-2xl border bg-white shadow-sm p-6">
    <p class="text-slate-600 whitespace-pre-wrap"><%= @poll.description %></p>
    <dl class="mt-6 grid grid-cols-1 sm:grid-cols-2 gap-4 text-sm">
      <div>
        <dt class="text-slate-500">状態</dt>
        <dd class="text-slate-800 font-medium"><%= @poll.status %></dd>
      </div>
      <div>
        <dt class="text-slate-500">締切</dt>
        <dd class="text-slate-800 font-medium"><%= @poll.ends_at&.in_time_zone("Asia/Tokyo")&.strftime("%Y-%m-%d %H:%M") || "設定なし" %></dd>
      </div>
    </dl>
  </div>
</div>

