<div>
  <h1 class="text-3xl font-bold text-slate-900 mb-8">アンケート編集</h1>

  <div class="bg-white border border-slate-200 rounded-2xl shadow-sm p-8">
    <%= form_with model: @poll, local: true do |f| %>
      <% if @poll.errors.any? %>
        <div class="bg-rose-50 border border-rose-200 rounded-lg p-4 mb-6">
          <h3 class="font-medium text-rose-900 mb-2">エラーが発生しました:</h3>
          <ul class="list-disc list-inside text-sm text-rose-700">
            <% @poll.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="space-y-6">
        <div>
          <%= f.label :title, "タイトル", class: "block text-sm font-medium text-slate-900 mb-2" %>
          <%= f.text_field :title, 
              class: "w-full px-4 py-2 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
        </div>

        <div>
          <%= f.label :description, "説明", class: "block text-sm font-medium text-slate-900 mb-2" %>
          <%= f.text_area :description, rows: 3,
              class: "w-full px-4 py-2 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
        </div>

        <div>
          <%= f.label :ends_at, "締切日時", class: "block text-sm font-medium text-slate-900 mb-2" %>
          <%= f.datetime_field :ends_at,
              class: "w-full px-4 py-2 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
          <p class="text-sm text-slate-500 mt-1">※空欄の場合は無期限</p>
        </div>

        <div>
          <%= f.label :status, "ステータス", class: "block text-sm font-medium text-slate-900 mb-2" %>
          <%= f.select :status, 
              options_for_select([["下書き", "draft"], ["公開", "open"], ["終了", "closed"]], @poll.status),
              {},
              class: "w-full px-4 py-2 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
        </div>

        <div>
          <label class="block text-sm font-medium text-slate-900 mb-2">選択肢</label>
          <div id="choices" class="space-y-3">
            <%= f.fields_for :choices do |choice_form| %>
              <div class="choice-field flex items-center gap-2">
                <%= choice_form.hidden_field :id %>
                <%= choice_form.text_field :label,
                    class: "flex-1 px-4 py-2 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent",
                    placeholder: "選択肢を入力" %>
                <%= choice_form.check_box :_destroy, class: "hidden" %>
                <button type="button" class="remove-choice px-3 py-2 text-rose-600 hover:text-rose-700 transition">
                  削除
                </button>
              </div>
            <% end %>
          </div>
          <button type="button" id="add-choice" class="mt-3 px-4 py-2 bg-slate-100 text-slate-700 rounded-lg hover:bg-slate-200 transition">
            + 選択肢を追加
          </button>
        </div>
      </div>

      <div class="flex items-center gap-3 mt-8 pt-6 border-t">
        <%= f.submit "更新する", 
            class: "px-6 py-3 bg-indigo-600 text-white font-medium rounded-lg hover:bg-indigo-700 transition cursor-pointer" %>
        <%= link_to "キャンセル", @poll,
            class: "px-6 py-3 text-slate-600 hover:text-slate-900 transition" %>
      </div>
    <% end %>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const addChoiceButton = document.getElementById('add-choice');
  const choicesContainer = document.getElementById('choices');

  if (!addChoiceButton || !choicesContainer) return;

  let choiceIndex = document.querySelectorAll('.choice-field').length;

  addChoiceButton.addEventListener('click', function() {
    const newChoice = document.createElement('div');
    newChoice.className = 'choice-field flex items-center gap-2';
    newChoice.innerHTML = `
      <input class="flex-1 px-4 py-2 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
             placeholder="選択肢を入力"
             type="text"
             name="poll[choices_attributes][${choiceIndex}][label]"
             id="poll_choices_attributes_${choiceIndex}_label">
      <button type="button" class="remove-choice px-3 py-2 text-rose-600 hover:text-rose-700 transition">
        削除
      </button>
    `;
    choicesContainer.appendChild(newChoice);
    choiceIndex++;

    attachRemoveHandler(newChoice.querySelector('.remove-choice'));
  });

  function attachRemoveHandler(button) {
    button.addEventListener('click', function() {
      const field = button.closest('.choice-field');
      const destroyCheckbox = field.querySelector('input[type="checkbox"][name*="_destroy"]');
      
      if (destroyCheckbox) {
        destroyCheckbox.checked = true;
        field.style.display = 'none';
      } else {
        field.remove();
      }
    });
  }

  document.querySelectorAll('.remove-choice').forEach(button => {
    attachRemoveHandler(button);
  });
});
</script>